<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_radioGroup">
    </android.support.v4.view.ViewPager>
    
    <RadioGroup
        android:id="@+id/main_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <RadioButton
            style="@style/Custom_radioButton"
            android:drawableTop="@drawable/main_bottom_item_huapeng"
            android:text="@string/main_huapeng"/>

        <RadioButton
            style="@style/Custom_radioButton"
            android:drawableTop="@drawable/main_bottom_item_baike"
            android:text="@string/main_baike"/>

        <RadioButton
            style="@style/Custom_radioButton"
            android:drawableTop="@drawable/main_bottom_item_daren"
            android:text="@string/main_daren"/>

        <RadioButton
            style="@style/Custom_radioButton"
            android:drawableTop="@drawable/main_bottom_item_zhongxin"
            android:text="@string/main_zhongxin"/>
    </RadioGroup>
</RelativeLayout>