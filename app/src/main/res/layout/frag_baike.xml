<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/baike_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:padding="10dp"
        android:text="@string/main_baike"/>

    <EditText
        android:id="@+id/baike_search_edit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/baike_title_tv"
        android:hint="@string/frag_baike_search"
        android:drawableLeft="@mipmap/searchlogo"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:textSize="13dp"
        android:background="@drawable/baike_search_edittext"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/baike_recyclerView"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_below="@id/baike_search_edit"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>